{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "stanford": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Stanford AI Gateway",
      "options": {
        "baseURL": "https://aiapi-prod.stanford.edu/v1",
        "apiKey": "{file:/sdf/group/lcls/ds/dm/apps/etc/key.dat}"
      },
      "models": {
        "claude-4-5-sonnet": {
          "name": "Claude 4.5 Sonnet",
          "cost": {
            "input": 3,
            "output": 15
          }
        },
        "claude-4-sonnet": {
          "name": "Claude 4 Sonnet",
          "cost": {
            "input": 3,
            "output": 15
          }
        },
        "gpt-4.1": {
          "name": "GPT-4.1"
        },
        "gemini-2.5-pro": {
          "name": "Gemini 2.5 Pro"
        },
        "gpt-5": {
          "name": "GPT-5"
        },
        "deepseek-r1": {
          "name": "DeepSeek R1"
        }
      }
    }
  },
  "model": "stanford/claude-4-sonnet",
  "agent": {
    "coder": {
      "model": "stanford/claude-4-sonnet"
    }
  },
  "tui": {
    "theme": "opencode"
  }
}
